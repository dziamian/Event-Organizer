<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sector_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SectorFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />

        <RelativeLayout
                android:id="@+id/first_element"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/room_details_field">

            <TextView
                    android:id="@+id/first_element_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sektor A"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
            />

            <TextView
                    android:id="@+id/first_element_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_element_name"
                    android:text="al. Tysiąclecia Państwa Polskiego 7"
                    android:textColor="#424242"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dp"
            />

            <TextView
                    android:id="@+id/first_element_available_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktywne atrakcje: 25"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="right|bottom"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
            />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/second_element"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/first_element"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/room_details_field">

            <TextView
                    android:id="@+id/second_element_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sektor B"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
            />

            <TextView
                    android:id="@+id/second_element_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/second_element_name"
                    android:text="al. Tysiąclecia Państwa Polskiego 7"
                    android:textColor="#424242"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dp"
            />

            <TextView
                    android:id="@+id/second_element_available_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktywne atrakcje: 10"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="right|bottom"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
            />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/third_element"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/second_element"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/room_details_field">

            <TextView
                    android:id="@+id/third_element_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sektor B"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
            />

            <TextView
                    android:id="@+id/third_element_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/third_element_name"
                    android:text="al. Tysiąclecia Państwa Polskiego 7"
                    android:textColor="#424242"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dp"
            />

            <TextView
                    android:id="@+id/third_element_available_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktywne atrakcje: 8"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="right|bottom"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
            />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>