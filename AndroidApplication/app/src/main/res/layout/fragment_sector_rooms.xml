<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SectorRoomsFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:id="@+id/room1_field"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/room_details_field"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
        />

        <TextView
                android:id="@+id/room1_attraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Czy beton ma pH?"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@id/room1_field"
        />

        <TextView
                android:id="@+id/room1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room1_attraction"
                android:text="Pokój 1.08"
                android:textColor="#424242"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
        />

        <TextView
                android:id="@+id/room1_state_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grup w kolejce: 0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="right|bottom"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:layout_alignRight="@id/room1_field"
                android:layout_alignBottom="@id/room1_field"
        />

        <TextView
                android:id="@+id/room1_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dostępny!"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="left|bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="5dp"
                android:layout_alignLeft="@id/room1_field"
                android:layout_alignBottom="@id/room1_field"

        />

        <View
                android:id="@+id/room2_field"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/room1_field"
                android:background="@drawable/room_details_field"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
        />

        <TextView
                android:id="@+id/room2_attraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dlaczego świat jest kolorowy?"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@id/room2_field"
        />

        <TextView
                android:id="@+id/room2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room2_attraction"
                android:text="Pokój 1.20"
                android:textColor="#424242"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
        />

        <TextView
                android:id="@+id/room2_state_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grup w kolejce: 5"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="right|bottom"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:layout_alignRight="@id/room2_field"
                android:layout_alignBottom="@id/room2_field"
        />

        <TextView
                android:id="@+id/room2_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proces rezerwowania..."
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="left|bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="5dp"
                android:layout_alignLeft="@id/room2_field"
                android:layout_alignBottom="@id/room2_field"
        />

        <View
                android:id="@+id/room3_field"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/room2_field"
                android:background="@drawable/room_details_field"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
        />

        <TextView
                android:id="@+id/room3_attraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trójwymiarowe zabawki"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@id/room3_field"
        />

        <TextView
                android:id="@+id/room3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room3_attraction"
                android:text="Pokój 11a"
                android:textColor="#424242"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
        />

        <TextView
                android:id="@+id/room3_state_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grup w kolejce: 12"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="right|bottom"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:layout_alignRight="@id/room3_field"
                android:layout_alignBottom="@id/room3_field"
        />

        <TextView
                android:id="@+id/room3_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zajęty!"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="left|bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="5dp"
                android:layout_alignLeft="@id/room3_field"
                android:layout_alignBottom="@id/room3_field"
        />

    </RelativeLayout>

</FrameLayout>